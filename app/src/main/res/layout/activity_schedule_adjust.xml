<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="br.com.curubodenga.pimfeeder.schedule.ScheduleAdjustActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/topScheduleAdjustLayout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/completeDayScheduleAdjustTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"/>

            <ImageButton
                android:id="@+id/openCalendarScheduleAdjustImageButton"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:onClick="openDatePicker"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_calendar"/>

            <TextView
                android:id="@+id/dateScheduleAdjusttextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:onClick="openDatePicker"
                android:text="Data"
                android:textSize="18dp"/>

        </LinearLayout>

        <DatePicker
            android:id="@+id/scheduleAdjustDatePicker"
            android:layout_gravity="center_horizontal"
            android:theme="@style/MyDatePickerTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TimePicker
            android:id="@+id/scheduleAdjustTimePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/layout_bg"
            android:theme="@style/MyTimePickerTheme"
            android:timePickerMode="spinner"/>

        <LinearLayout
            android:id="@+id/weekDayLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_bg"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <Button
                android:id="@+id/sundayButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="sundayToggle"
                android:text="D"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="|"
                android:textAlignment="center"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/mondayButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="mondayToggle"
                android:text="S"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="|"
                android:textAlignment="center"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/tuesdayButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="tuesdayToggle"
                android:text="T"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="|"
                android:textAlignment="center"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/wednesdayButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="wednesdayToggle"
                android:text="Q"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="|"
                android:textAlignment="center"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/thursdayButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="thursdayToggle"
                android:text="Q"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="|"
                android:textAlignment="center"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/fridayButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="fridayToggle"
                android:text="S"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/editText6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="|"
                android:textAlignment="center"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/saturdayButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="saturdayToggle"
                android:text="S"
                android:textSize="20dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/dateScheduleAdjustOkButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:onClick="dateSelected"
            android:text="OK"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/dateScheduleAdjustSaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:onClick="save"
            android:text="SALVAR"
            android:textSize="18dp"/>

    </LinearLayout>
</RelativeLayout>
